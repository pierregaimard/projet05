{% extends "core.html.twig" %}

{% block Stylesheet %}
    <link rel="stylesheet" href="/public/assets/css/_data_list.css" />
{% endblock %}

{% block Body %}
    <div class="uk-container app-admin-home-container" uk-height-viewport="expand: true">
        <!-- Breadcrumb -->
        <div class="uk-card uk-card-body uk-background-muted uk-padding-small uk-margin-top uk-border-rounded">
            <ul class="uk-breadcrumb uk-margin-left">
                <li>
                    <a href="{{ getRoutePath('admin_home') }}">
                        Admin
                    </a>
                </li>
                <li>
                    <a href="{{ getRoutePath('admin_user_list') }}">
                        Users
                    </a>
                </li>
                <li>
                    <span>
                        View
                    </span>
                </li>
            </ul>
        </div>
        <!-- User card -->
        <div class="uk-margin-large-top uk-flex uk-flex-center">
            <div class="uk-card uk-card-body uk-width-1-3@l uk-width-1-2@m uk-border-rounded uk-box-shadow-small">
                <div class="uk-card-badge uk-label uk-text-lowercase uk-light uk-background-secondary">
                    {{ member.status.status }}
                </div>
                <h3 class="uk-card-title uk-text-center uk-margin-remove-bottom">
                    <div>
                        <span class="uk-border-rounded" uk-icon="icon: user; ratio: 8"></span>
                    </div>
                    {{ member.formattedName('large') }}
                </h3>
                <p class="uk-text-center uk-margin-remove-top">
                    {{ member.email }}
                </p>
            </div>
        </div>
        <!-- Admin options -->
        <div class="uk-width-1-3@l uk-width-1-2@m uk-margin-large-top uk-margin-large-bottom uk-margin-auto">
            <a
                href="#app-user-lock-confirm"
                class="uk-button uk-button-default uk-border-rounded uk-width-1-1"
                uk-toggle
            >
                {% if member.status.status == 'ACTIVE' %}
                    <span uk-icon="lock"></span>
                    Lock
                {% elseif member.status.status == 'LOCKED' %}
                    <span uk-icon="unlock"></span>
                    Unlock
                {% endif %}
            </a>
            <a
                href="#app-user-delete-confirm"
                class="uk-button uk-button-danger uk-border-rounded uk-margin uk-width-1-1"
                uk-toggle
            >
                <span uk-icon="trash"></span>
                Remove
            </a>
            <a
                href="{{ getRoutePath('admin_user_list') }}"
                class="uk-button uk-button-text uk-border-rounded uk-width-1-1"
            >
                <span uk-icon="arrow-left"></span>
                Exit
            </a>
        </div>
        {% include "admin/user/_user_delete_confirm.html.twig" %}
        {% include "admin/user/_user_lock_confirm.html.twig" %}
    </div>
{% endblock %}