<form method="post" action="{{ getRoutePath('contact_form_check') }}" class="app-contact-form uk-margin-medium-top">
    <!-- first name -->
    {%
        include 'form/_form_input.html.twig'
        with {
            'ukMargin': 'uk-margin-small',
            'type': 'text',
            'id': 'firstName',
            'name': 'firstName',
            'placeholder': 'First Name',
            'error': formCheck['firstName'],
            'data': formData['firstName']
        }
    %}
    <!-- last name -->
    {%
        include 'form/_form_input.html.twig'
        with {
            'ukMargin': 'uk-margin-small',
            'type': 'text',
            'id': 'lastName',
            'name': 'lastName',
            'placeholder': 'Last Name',
            'error': formCheck['lastName'],
            'data': formData['lastName']
        }
    %}
    <!-- email -->
    {%
        include 'form/_form_input.html.twig'
        with {
            'ukMargin': 'uk-margin-small',
            'type': 'text',
            'id': 'email',
            'name': 'email',
            'placeholder': 'E-mail',
            'error': formCheck['email'],
            'data': formData['email']
        }
    %}
    <!-- message -->
    {%
        include 'form/_form_textarea.html.twig'
        with {
            'ukMargin': 'uk-margin-small',
            'id': 'message',
            'name': 'message',
            'placeholder': 'Message',
            'rows': 5,
            'error': formCheck['message'],
            'data': formData['message']
        }
    %}
    <input type="hidden" name="token" value="{{ token }}">
    <div class="uk-margin-small">
        <button type="submit" class="uk-button uk-width-1-1 uk-button-secondary uk-border-rounded">
            Send
        </button>
    </div>
</form>